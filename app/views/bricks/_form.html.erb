<%= form_for(@brick, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :set_number do |f| %>
      <%= f.label :set_number, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.number_field :set_number, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :price do |f| %>
      <%= f.label :price, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :price, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", bricks_path, class: 'btn' %>
  </div>
<% end %>
