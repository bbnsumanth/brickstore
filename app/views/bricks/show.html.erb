<% content_for :class, "scaffold" %>

<div class="page-header">
  <div class="container">
    <h2>Showing brick</h2>
  </div>
</div>

<div class="container">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-md-2 control-label">Set number</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @brick.set_number %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Name</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @brick.name %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Description</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @brick.description %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Price</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @brick.price %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions col-md-offset-2 col-md-10">
    <%= link_to fa_icon_tag("pencil") + ' Edit', edit_brick_path(@brick), class: 'btn btn-primary' %>
    <%= link_to 'Back', bricks_path, class: 'btn' %>
  </div>
</div>
